<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <label>Return Request Automation</label>
    <processType>Flow</processType>
    <status>Active</status>

    <!-- Start: After Save on Create -->
    <startElementReference>Start</startElementReference>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <object>Return_Request__c</object>
        <recordTriggerType>Created</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
        <connector>
            <targetReference>Assignment_SetNew</targetReference>
        </connector>
    </start>

    <!-- Assignment to set status to New on create -->
    <assignments>
        <name>Assignment_SetNew</name>
        <label>Set Status to New</label>
        <locationX>300</locationX>
        <locationY>210</locationY>
        <assignmentItems>
            <assignToReference>$Record.Status__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>New</stringValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>End</targetReference>
        </connector>
    </assignments>

    <!-- End -->
    <stages/>
</Flow>
